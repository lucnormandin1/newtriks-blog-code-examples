/*Class: PlayList- loads XML playlist parsed from PlayListLoader.Author: Newtriks (simon@newtriks.com)Date: 18 April 2007*/// Importsimport mx.utils.Delegate;import PlayListLoader;// Define classclass PlayList extends MovieClip {		// Variables	private static var playlist_data:PlayListLoader;		public var addEventListener:Function;	public var removeEventListener:Function;		// Constructor	function PlayList ()	{		this.init();			}		private function init():Void	{		// Create a new instance of the PlayListLoader class and load xml		playlist_data = new PlayListLoader("playlist.xml");				// Add event listener for out for the dispatching of the playlist		playlist_data.addEventListener("complete", Delegate.create(this, completeHandler));	}		private function completeHandler(eventObject:Object):Void	{		// Trace all of the parsed values		for (var i=0; i < eventObject.items.length; i++)		{		trace("PLAYLIST filename: " +eventObject.items[i].filename);		trace("PLAYLIST desc: " +eventObject.items[i].desc);		trace("PLAYLIST genre: " +eventObject.items[i].genre);		trace("PLAYLIST myrating: " +eventObject.items[i].myrating);		}	}		}